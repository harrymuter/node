<%- include partials/begin.ejs %>
<%- include partials/navigation.ejs %>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="container">
    <div class="jumbotron" style="background-color: #FFF">
        <div class="row">
            <div class="col-xs-12">
                <h1>University of East Anglia</h1>
                <h2>REC Approval System</h2>
            </div>
        </div>
    </div>
    <div class="jumbotron" style="background-color: #e3f2fd">
        <div class="row">
            <div class="col-sm-12">
                <h2>Reset Password</h2>
                <div class="row" style="padding-bottom: 1em;"></div>
            </div>
        </div>
        <% if (error!="") { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>No account found!</strong>
            <hr>We did not find an account that matches the username entered.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% } %>

        <form  class="form-row" action="/reset-password" method="get">

            <div class="form-group col-md-12">
                <label for="username" class="control-label">Username*</label>
                <input name="username" class="form-control" id="username" placeholder="Username" required>
            </div>

            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-outline-primary my-2 my-sm-0">Next</button>
            </div>
        </form>

    </div>
</div>
</body>
<%- include partials/end.ejs %>
